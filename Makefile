SHELL := /bin/bash

# tests
# ##################################################################################################

test:
	npm run sonar
	npm run test:all

# node.js
# ##################################################################################################

nvm:
	[ -s "$$HOME/.nvm/nvm.sh" ] && . "$$HOME/.nvm/nvm.sh" && \
	nvm install $$(cat .nvmrc) && \
	nvm use
